<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BLOG POST 3000</title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">

      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}


        <a class="nav-a" href="/profile">Profile |</a>

        <button class="no-button" id="logout"></button>

        <a class="nav-a" class="nav-a" href="/">Blog Posts |</a>

        <button class="no-button" id="logout">Logout </button>

        {{else}}
        <a class="nav-a" href="/login">Login</a>

        {{/if}}
      </nav>

    </header>
    <div class="row">
      <div class="column display-flex justify-space-between ml-3 p-2">
        <h1>
          <a href="/">TECH BLOG 3000</a>
        </h1>
      </div>
    </div>
    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
    <footer>

    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>